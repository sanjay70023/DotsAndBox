<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_16sdp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blueback"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_14sdp">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/mypicture" />

                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:includeFontPadding="false"
                android:text="@string/set_your_name"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_set_your_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/galano_grotesque_black_1"
                    android:imeOptions="actionDone"
                    android:includeFontPadding="false"
                    android:maxLength="8"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:textColor="@color/black"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/galano_grotesque_black_1"
                    android:text="@string/save"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_play_games_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:includeFontPadding="false"
                android:text="@string/your_play_games_name"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_play_games_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/galano_grotesque_black_1"
                    android:includeFontPadding="false"
                    android:textColor="@color/wonColor"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:background="@drawable/ic_share_black_24dp"
                    android:fontFamily="@font/galano_grotesque_black_1"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blueback"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="@string/game_played"
                            android:textColor="@color/font_color_title"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_game_played"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="100"
                            android:textColor="@color/icon_color_white"
                            android:textSize="@dimen/_24ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blueback"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="@string/win_new"
                            android:textColor="@color/font_color_title"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_game_win"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="70"
                            android:textColor="@color/icon_color_white"
                            android:textSize="@dimen/_24ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blueback"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="@string/lost"
                            android:textColor="@color/font_color_title"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_game_lost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="30"
                            android:textColor="@color/icon_color_white"
                            android:textSize="@dimen/_24ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blueback"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="@string/winPer"
                            android:textColor="@color/font_color_title"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_game_win_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:fontFamily="@font/galano_grotesque_black_1"
                            android:includeFontPadding="false"
                            android:text="70"
                            android:textColor="@color/icon_color_white"
                            android:textSize="@dimen/_24ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/common_ad_layout" />


</LinearLayout>