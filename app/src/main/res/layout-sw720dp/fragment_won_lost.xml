<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/greenback"
    android:minWidth="530dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12ssp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:text="@string/you_won"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/icon_color_white"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:id="@+id/img_won_player"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/winner_trofi_big_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:includeFontPadding="false"
            android:text="@string/score"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:includeFontPadding="false"
            android:textColor="@color/icon_color_white"
            android:textSize="@dimen/_26ssp"
            tools:text="6:9" />
        <LinearLayout
            android:id="@+id/ll_restart"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/playbutton"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Restart"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:textAllCaps="true"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/home"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingBottom="@dimen/_8sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Home"
                android:textAllCaps="true"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>