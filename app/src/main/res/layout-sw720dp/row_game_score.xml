<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_115sdp"
    android:background="@drawable/blueback"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_opponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:text="Me Vs Robot"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_15ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_score_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:text="Score : "
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_game_score"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:text="@string/history_sample_score"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_result"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:text="@string/win"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14ssp" />


        <TextView
            android:id="@+id/tv_game_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:text="@string/history_sample_time"
            android:textAlignment="textEnd"
            android:textColor="@color/font_color_title_small"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>


</LinearLayout>