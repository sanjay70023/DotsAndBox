<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:minWidth="720dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greenback"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:gravity="center"
            android:text="@string/set_players_name"
            android:textColor="@color/icon_color_white"
            android:textSize="@dimen/_16ssp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:text="@string/set_your_name"
            android:textColor="@color/icon_color_white"
            android:textSize="@dimen/_14ssp" />

        <EditText
            android:id="@+id/edt_player_1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:imeOptions="actionNext"
            android:includeFontPadding="false"
            android:maxLength="8"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:text="@string/set_your_opponent_name"
            android:textColor="@color/icon_color_white"
            android:textSize="@dimen/_14ssp" />

        <EditText
            android:id="@+id/edt_player_2_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/galano_grotesque_black_1"
            android:imeOptions="actionDone"
            android:includeFontPadding="false"
            android:maxLength="8"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/_12ssp" />


        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/playbutton"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_25ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_25ssp"
            android:paddingBottom="@dimen/_8sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/galano_grotesque_black_1"
                android:gravity="center_horizontal"
                android:text="@string/play"
                android:textAllCaps="true"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>